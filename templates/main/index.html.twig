{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}


<div class="">
    MA PAGE ACCUEIL
</div>
{# ~Identity of the logged in user~ #}
  {% if app.user %}
        <div class="">
            <p>Connecté en tant que {{ app.user.userIdentifier }}</p>           
        </div>
    {% endif %}

{# ~Message success verify email user register~ #}
<div>
    {% for message in app.flashes('verify_email_success') %}
        <div class="" role="alert">{{ message }}</div>
    {% endfor %}
</div>

<div class="flex">
    {# ~Link user register~ #}
    <div>
        <button><a href="{{ path('app_register') }}">S'incrire</a></button>
    </div>
    
    {# ~Link user login~ #}
    <div>
        <button><a href="{{ path('app_login') }}">Connexion</a></button>
    </div>

     {# ~Link user login~ #}
    <div>
        <button><a href="{{ path('app_logout') }}">Déconnexion</a></button>
    </div>
</div>
{% endblock %}
